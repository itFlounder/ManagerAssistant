<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景颜色-->
    <solid android:color="@color/color1"/>

    <!--边界线宽度及颜色-->
    <stroke
        android:width="1dp"
        android:color="@color/colorview"/>
    <!--边距-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>
    <!--圆角-->
    <corners android:radius="10dp"/>
</shape>